<style>
video {
width: 100%;
height: 100%;
display: block;
margin: 0 auto;
}
  .container.new-video h2 {
    text-align: left;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
}
.container.new-video {
    margin-top: 20px;
    margin: 20px 0px 0px;
}
  
</style>
{% if section.settings.cvlink!= blank %}
<div class="collection-video">
   {%- if section.settings.title != blank -%}
      <header class="section__header">
        <div class="container new-video">
          <h2 class="section__title heading h3">
          {{ section.settings.title | escape }}
          </h2>
        </div>
      </header>
    {%- endif -%}
  <video muted autoplay playsinline loop controls controlsList="nodownload" poster="{{ section.settings.cplink }}">
      <source src="{{ section.settings.cvlink }}"type="video/mp4">
  </video>
</div>
{% endif %}
{% schema %}
  {
    "name": "Collection Video",
    "settings": [
      {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Our collections"
    },
    {
      "type": "url",
      "id": "cplink",
      "label": "Car Covers Poster Link"
    },
      {
      "type": "url",
      "id": "cvlink",
      "label": "Car Covers Video Link"
    }
    ],
    "presets": [
    {
      "category": "Collection Video",
      "name": "Collection Video"
    
    }
  ]
  }
{% endschema %}

