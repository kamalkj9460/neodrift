					<section class="shopify-section index-section" >
						<div class="container page-width wrapper" style="max-width:{{section.settings.enorm_review_product_width}}px;">
							<div id="enormReviews" class="enorm-reviews" data-id="{{product.id}}" data-title="{{ product.title }}" data-handle="{{ product.handle }}" data-image="{{ featured_media | img_url: product_image_size, scale: product_image_scale }}"></div>
						</div>
					</div>		
				{% schema %}
				{
				  "name": "Enorm Productpage Review",
				  "settings": [
					{
					    "type": "range",
					    "id": "enorm_review_product_width",
					    "min": 360,
					    "max": 1920,
					    "step": 60,
					    "unit": "px",
					    "label": "Font size",
					    "default": 1200
					}
				  ],
				  "presets": [
				    {
				      "name": "Enorm Productpage Review",
				      "category": "Enorm Productpage Review"
				    }
				  ]
				}
				{% endschema %}